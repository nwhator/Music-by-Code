---
import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Studio - Music by Code">
  <main class="min-h-screen px-4 py-12">
    <div class="container mx-auto max-w-6xl">
      <!-- Header -->
      <div class="text-center mb-8">
        <a href="/" class="inline-flex items-center gap-2 text-neon-blue hover:text-neon-purple transition-colors mb-4">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Home
        </a>
        <h1 class="text-5xl md:text-6xl font-bold mb-4 bg-gradient-to-r from-neon-blue to-neon-pink bg-clip-text text-transparent">
          ðŸŽ¹ Studio
        </h1>
        <p class="text-gray-400 text-lg">
          Experiment with Tone.js code in real-time
        </p>
      </div>

      <!-- Studio Interface -->
      <div class="grid lg:grid-cols-2 gap-6 mb-8">
        <!-- Code Editor -->
        <div class="bg-white/5 backdrop-blur-lg rounded-2xl p-6 border border-white/10">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold flex items-center gap-2">
              <svg class="w-6 h-6 text-neon-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
              </svg>
              Code Editor
            </h2>
            <button 
              id="loadExample"
              class="text-sm px-4 py-2 bg-white/10 hover:bg-white/20 rounded-lg transition-all"
            >
              Load Example
            </button>
          </div>
          <textarea 
            id="codeEditor"
            class="w-full h-96 bg-gray-900 text-gray-100 font-mono text-sm p-4 rounded-lg border border-gray-700 focus:border-neon-blue focus:outline-none resize-none"
            placeholder="// Write your Tone.js code here...
// Example:
// import * as Tone from 'tone';
// await Tone.start();
// const synth = new Tone.Synth().toDestination();
// synth.triggerAttackRelease('C4', '8n');"
          ></textarea>
          
          <!-- Controls -->
          <div class="flex gap-3 mt-4">
            <button 
              id="runCode"
              class="flex-1 bg-gradient-to-r from-green-500 to-emerald-500 hover:from-green-600 hover:to-emerald-600 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 hover:shadow-lg hover:shadow-green-500/50 flex items-center justify-center gap-2"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z"/>
              </svg>
              Run Code
            </button>
            <button 
              id="stopCode"
              class="bg-red-500/20 hover:bg-red-500/30 text-red-400 font-semibold py-3 px-6 rounded-lg transition-all duration-300 border border-red-500/30 flex items-center justify-center gap-2"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8 7a1 1 0 00-1 1v4a1 1 0 001 1h4a1 1 0 001-1V8a1 1 0 00-1-1H8z" clip-rule="evenodd"/>
              </svg>
              Stop
            </button>
            <button 
              id="clearCode"
              class="bg-gray-500/20 hover:bg-gray-500/30 text-gray-400 font-semibold py-3 px-6 rounded-lg transition-all duration-300 border border-gray-500/30"
            >
              Clear
            </button>
          </div>
        </div>

        <!-- Visualization & Console -->
        <div class="space-y-6">
          <!-- Waveform Visualization -->
          <div class="bg-white/5 backdrop-blur-lg rounded-2xl p-6 border border-white/10">
            <h2 class="text-xl font-semibold mb-4 flex items-center gap-2">
              <svg class="w-6 h-6 text-neon-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
              </svg>
              Visualization
            </h2>
            <div class="waveform-container h-48 bg-black/30 rounded-lg overflow-hidden relative">
              <canvas id="studioWaveform" class="w-full h-full"></canvas>
              <div id="idleMessage" class="absolute inset-0 flex items-center justify-center text-gray-600">
                Run code to see visualization
              </div>
            </div>
          </div>

          <!-- Console Output -->
          <div class="bg-white/5 backdrop-blur-lg rounded-2xl p-6 border border-white/10">
            <h2 class="text-xl font-semibold mb-4 flex items-center gap-2">
              <svg class="w-6 h-6 text-neon-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              Console
            </h2>
            <div 
              id="console"
              class="h-32 bg-gray-900 text-gray-100 font-mono text-sm p-4 rounded-lg border border-gray-700 overflow-y-auto"
            >
              <div class="text-gray-500">// Console output will appear here...</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Tips & Examples -->
      <div class="bg-white/5 backdrop-blur-lg rounded-2xl p-6 border border-white/10">
        <h2 class="text-2xl font-bold mb-4">ðŸ’¡ Quick Tips</h2>
        <div class="grid md:grid-cols-3 gap-4 text-sm">
          <div class="bg-white/5 p-4 rounded-lg">
            <h3 class="font-semibold text-neon-blue mb-2">Start Audio Context</h3>
            <code class="text-gray-400">await Tone.start();</code>
          </div>
          <div class="bg-white/5 p-4 rounded-lg">
            <h3 class="font-semibold text-neon-purple mb-2">Simple Synth</h3>
            <code class="text-gray-400">const synth = new Tone.Synth().toDestination();</code>
          </div>
          <div class="bg-white/5 p-4 rounded-lg">
            <h3 class="font-semibold text-neon-pink mb-2">Play Note</h3>
            <code class="text-gray-400">synth.triggerAttackRelease('C4', '8n');</code>
          </div>
        </div>
      </div>
    </div>

    <Footer />
  </main>
</BaseLayout>

<script>
  import * as Tone from 'tone';

  const codeEditor = document.getElementById('codeEditor') as HTMLTextAreaElement;
  const runBtn = document.getElementById('runCode') as HTMLButtonElement;
  const stopBtn = document.getElementById('stopCode') as HTMLButtonElement;
  const clearBtn = document.getElementById('clearCode') as HTMLButtonElement;
  const loadExampleBtn = document.getElementById('loadExample') as HTMLButtonElement;
  const consoleEl = document.getElementById('console') as HTMLDivElement;
  const canvas = document.getElementById('studioWaveform') as HTMLCanvasElement;
  const idleMessage = document.getElementById('idleMessage') as HTMLDivElement;

  let analyser: Tone.Waveform | null = null;
  let isRunning = false;
  let animationId: number | null = null;

  // Setup canvas
  const container = canvas.parentElement!;
  canvas.width = container.offsetWidth * window.devicePixelRatio;
  canvas.height = container.offsetHeight * window.devicePixelRatio;

  // Console logging
  function log(message: string, type: 'info' | 'error' | 'success' = 'info') {
    const colors = {
      info: 'text-blue-400',
      error: 'text-red-400',
      success: 'text-green-400'
    };
    const time = new Date().toLocaleTimeString();
    consoleEl.innerHTML += `<div class="${colors[type]}">[${time}] ${message}</div>`;
    consoleEl.scrollTop = consoleEl.scrollHeight;
  }

  // Draw waveform
  function drawWaveform() {
    if (!analyser || !isRunning) return;
    
    const ctx = canvas.getContext('2d')!;
    const bufferLength = analyser.fftSize;
    const dataArray = new Float32Array(bufferLength);
    
    function draw() {
      if (!isRunning) return;
      
      animationId = requestAnimationFrame(draw);
      analyser!.getValue(dataArray);
      
      ctx.fillStyle = 'rgba(0, 0, 0, 0.1)';
      ctx.fillRect(0, 0, canvas.width, canvas.height);
      
      ctx.lineWidth = 2;
      ctx.strokeStyle = '#00d4ff';
      ctx.beginPath();
      
      const sliceWidth = canvas.width / bufferLength;
      let x = 0;
      
      for (let i = 0; i < bufferLength; i++) {
        const v = (dataArray[i] + 1) / 2;
        const y = v * canvas.height;
        
        if (i === 0) {
          ctx.moveTo(x, y);
        } else {
          ctx.lineTo(x, y);
        }
        
        x += sliceWidth;
      }
      
      ctx.stroke();
    }
    
    draw();
  }

  // Run code
  runBtn.addEventListener('click', async () => {
    const code = codeEditor.value.trim();
    
    if (!code) {
      log('Please enter some code first!', 'error');
      return;
    }

    try {
      log('Executing code...', 'info');
      runBtn.disabled = true;
      
      // Start Tone.js if not already started
      await Tone.start();
      
      // Setup analyser
      if (!analyser) {
        analyser = new Tone.Waveform(256);
        Tone.Destination.connect(analyser);
      }
      
      // Execute user code
      const AsyncFunction = Object.getPrototypeOf(async function(){}).constructor;
      const userFunction = new AsyncFunction('Tone', code);
      await userFunction(Tone);
      
      isRunning = true;
      idleMessage.style.display = 'none';
      drawWaveform();
      
      log('Code executed successfully! âœ“', 'success');
      
    } catch (error) {
      log(`Error: ${(error as Error).message}`, 'error');
      console.error(error);
    } finally {
      runBtn.disabled = false;
    }
  });

  // Stop audio
  stopBtn.addEventListener('click', () => {
    Tone.Transport.stop();
    Tone.Transport.cancel();
    isRunning = false;
    
    if (animationId) {
      cancelAnimationFrame(animationId);
    }
    
    // Clear canvas
    const ctx = canvas.getContext('2d')!;
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    idleMessage.style.display = 'flex';
    
    log('Stopped audio', 'info');
  });

  // Clear editor
  clearBtn.addEventListener('click', () => {
    codeEditor.value = '';
    consoleEl.innerHTML = '<div class="text-gray-500">// Console output will appear here...</div>';
  });

  // Load example
  loadExampleBtn.addEventListener('click', () => {
    const example = `// Simple melody example
await Tone.start();

const synth = new Tone.Synth({
  oscillator: { type: "triangle" },
  envelope: {
    attack: 0.05,
    decay: 0.1,
    sustain: 0.3,
    release: 1
  }
}).toDestination();

const melody = ["C4", "E4", "G4", "B4"];
let index = 0;

const loop = new Tone.Loop((time) => {
  synth.triggerAttackRelease(melody[index % melody.length], "8n", time);
  index++;
}, "4n");

loop.start(0);
Tone.Transport.start();`;

    codeEditor.value = example;
    log('Example loaded!', 'success');
  });
</script>
