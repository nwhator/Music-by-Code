---
import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="ğŸµ Music by Code - Made by Promise">
  <main class="min-h-screen flex flex-col">
    <!-- Hero Section -->
    <div class="flex-1 flex items-center justify-center px-4">
      <div class="text-center max-w-4xl mx-auto">
        <!-- Animated Background Waves -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none opacity-30">
          <div class="wave-container">
            <svg class="wave" viewBox="0 0 1200 120" preserveAspectRatio="none">
              <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" class="fill-neon-blue/20"></path>
            </svg>
          </div>
        </div>

        <!-- Content -->
        <h1 class="text-6xl md:text-8xl font-bold mb-6 bg-gradient-to-r from-neon-blue via-neon-purple to-neon-pink bg-clip-text text-transparent animate-gradient">
          ğŸµ Music by Code
        </h1>
        
        <p class="text-2xl md:text-3xl text-gray-300 mb-4 font-light">
          Made by <span class="text-neon-purple font-semibold">Promise</span>
        </p>
        
        <p class="text-lg md:text-xl text-gray-400 mb-12 max-w-2xl mx-auto">
          Exploring the harmony between code and sound.
        </p>

        <!-- CTA Button -->
        <a 
          href="/library"
          class="group inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-neon-blue to-neon-purple rounded-full text-white font-semibold text-lg hover:shadow-lg hover:shadow-neon-purple/50 transition-all duration-300 hover:scale-105"
        >
          <span>Explore the Library</span>
          <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>

        <!-- Floating Music Notes -->
        <div class="mt-16 flex justify-center gap-8 text-4xl animate-wave">
          <span class="inline-block" style="animation-delay: 0s;">ğŸµ</span>
          <span class="inline-block" style="animation-delay: 0.5s;">ğŸ¶</span>
          <span class="inline-block" style="animation-delay: 1s;">ğŸ¸</span>
          <span class="inline-block" style="animation-delay: 1.5s;">ğŸ¹</span>
          <span class="inline-block" style="animation-delay: 2s;">ğŸ¥</span>
        </div>
      </div>
    </div>

    <Footer />
  </main>
</BaseLayout>

<style>
  .wave-container {
    position: absolute;
    width: 100%;
    height: 100%;
    animation: wave 10s ease-in-out infinite;
  }

  .wave {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: auto;
    animation: wave-animation 8s ease-in-out infinite;
  }

  @keyframes wave-animation {
    0%, 100% {
      transform: translateX(0) translateY(0);
    }
    50% {
      transform: translateX(-25px) translateY(-10px);
    }
  }
</style>
